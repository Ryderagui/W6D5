<h1>Make new cat rental request! </h1>



<form action="/cat_rental_requests" method = "post">
    <label for="cat">Cats</label>
    <select id="cat" name = "cat_rental_request[cat_id]" required>
        <option disabled selected>-- Please Select --</option>
        <% @cats.each do |cat| %>
        <option value = "<%= cat.id%>"><%=cat.name%></option>
        <% end%>
    </select>
    <label for="start_date">Start Date</label>
    <input id="start_date" type ="date" name="cat_rental_request[start_date]" required>

    <label for="end_date">End Date</label>
    <input id="end_date" type ="date" name="cat_rental_request[end_date]" required>

    <input type="submit" value="Make Rental Request">

</form>


