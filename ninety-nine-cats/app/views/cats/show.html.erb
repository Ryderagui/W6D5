<h1><%=@cat.name%></h1>
<a href="/cats/<%=@cat.id%>/cat_rental_requests/new">New Request</a>
<br>
<a href="/cats/">All Cats</a>

<%if @cat_rental_requests.empty?%>
    <p><%=@cat.name%> has no requests</p>

<%else%>
<table> 
    <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Status</th>
    </tr>
    <%@cat_rental_requests.each do |request|%>
    <tr>
        <td><%=request.start_date%></td>
        <td><%=request.end_date%></td>
        <td><%=request.status%></td>
    </tr>
    <%end%>
</table>
<%end%>